{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/FrontitudeToResxXlsx/FrontitudeToResxXlsx.csproj"
      ],
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-and-prepare-output",
      "dependsOn": ["build"],
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "if (!(Test-Path Output)) { New-Item -ItemType Directory -Name Output }"
      ]
    }
  ]
}
